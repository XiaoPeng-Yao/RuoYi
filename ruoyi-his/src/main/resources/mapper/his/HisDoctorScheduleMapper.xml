<mapper namespace="com.ruoyi.his.mapper.HisDoctorScheduleMapper">
    
    <resultMap type="HisDoctorSchedule" id="HisDoctorScheduleResult">
        <result property="id"    column="id"    />
        <result property="orgCode"    column="org_code"    />
        <result property="orgName"    column="org_name"    />
        <result property="deptId"    column="dept_id"    />
        <result property="deptName"    column="dept_name"    />
        <result property="doctorId"    column="doctor_id"    />
        <result property="doctorName"    column="doctor_name"    />
        <result property="scheduleDate"    column="schedule_date"    />
        <result property="scheduleTag"    column="schedule_tag"    />
        <result property="scheduleShift"    column="schedule_shift"    />
        <result property="onLimitNum"    column="on_limit_num"    />
        <result property="onNum"    column="on_num"    />
        <result property="offLimitNum"    column="off_limit_num"    />
        <result property="offNum"    column="off_num"    />
        <result property="isShow"    column="is_show"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="deleted"    column="deleted"    />
    </resultMap>

    <sql id="selectHisDoctorScheduleVo">
        select id, org_code, org_name, dept_id, dept_name, doctor_id, doctor_name, schedule_date, schedule_tag, schedule_shift, on_limit_num, on_num, off_limit_num, off_num, is_show, create_time, update_time, deleted from his_doctor_schedule
    </sql>

    <select id="selectHisDoctorSchedule" parameterType="HisDoctorSchedule" resultMap="HisDoctorScheduleResult">
        <include refid="selectHisDoctorScheduleVo"/>
        <where>  
            <if test="orgCode != null  and orgCode != ''"> and org_code = #{orgCode}</if>
            <if test="doctorId != null  and doctorId != ''"> and doctor_id = #{doctorId}</if>
            <if test="scheduleDate != null ">
                AND date_format(schedule_date,'%y%m%d') = date_format(#{scheduleDate},'%y%m%d')
             </if>
            <if test="scheduleShift != null  and scheduleShift != ''"> and schedule_shift = #{scheduleShift}</if>
            <if test="isShow != null "> and is_show = #{isShow}</if>
        </where>
    </select>
    <select id="selectHisDoctorScheduleList" parameterType="HisDoctorSchedule" resultMap="HisDoctorScheduleResult">
        <include refid="selectHisDoctorScheduleVo"/>
        <where>
            <if test="orgName != null  and orgName != ''"> and org_name like concat('%', #{orgName}, '%')</if>
            <if test="deptName != null  and deptName != ''"> and dept_name like concat('%', #{deptName}, '%')</if>
            <if test="doctorName != null  and doctorName != ''"> and doctor_name like concat('%', #{doctorName}, '%')</if>
            <if test="scheduleDate != null ">
                AND date_format(schedule_date,'%y%m%d') &lt;= date_format(#{scheduleDate},'%y%m%d')
            </if>
            <if test="params.beginScheduleDate != null and params.beginScheduleDate != ''">
                AND date_format(schedule_date,'%y%m%d') &gt;= date_format(#{params.beginScheduleDate},'%y%m%d')
            </if>
            <if test="params.endScheduleDate != null and params.endScheduleDate != ''">
                AND date_format(schedule_date,'%y%m%d') &lt;= date_format(#{params.endScheduleDate},'%y%m%d')
            </if>
            <if test="isShow != null "> and is_show = #{isShow}</if>
        </where>
    </select>

    <select id="selectHisDoctorScheduleById" parameterType="Long" resultMap="HisDoctorScheduleResult">
        <include refid="selectHisDoctorScheduleVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertHisDoctorSchedule" parameterType="HisDoctorSchedule" useGeneratedKeys="true" keyProperty="id">
        insert into his_doctor_schedule
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orgCode != null">org_code,</if>
            <if test="orgName != null">org_name,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="deptName != null">dept_name,</if>
            <if test="doctorId != null">doctor_id,</if>
            <if test="doctorName != null">doctor_name,</if>
            <if test="scheduleDate != null">schedule_date,</if>
            <if test="scheduleTag != null">schedule_tag,</if>
            <if test="scheduleShift != null">schedule_shift,</if>
            <if test="onLimitNum != null">on_limit_num,</if>
            <if test="onNum != null">on_num,</if>
            <if test="offLimitNum != null">off_limit_num,</if>
            <if test="offNum != null">off_num,</if>
            <if test="isShow != null">is_show,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="deleted != null">deleted,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
