<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.his.mapper.HisWechatProviderMapper">
    
    <resultMap type="HisWechatProvider" id="HisWechatProviderResult">
        <result property="id"    column="id"    />
        <result property="clientId"    column="client_id"    />
        <result property="clientSecret"    column="client_secret"    />
        <result property="appId"    column="app_id"    />
        <result property="appSecret"    column="app_secret"    />
        <result property="mchAppId"    column="mch_app_id"    />
        <result property="mchId"    column="mch_id"    />
        <result property="mchKey"    column="mch_key"    />
        <result property="keyPath"    column="key_path"    />
        <result property="frontUrl"    column="front_url"    />
        <result property="openApi"    column="open_api"    />
        <result property="createTime"    column="create_time"    />
        <result property="deleted"    column="deleted"    />
    </resultMap>

    <resultMap id="HisWechatProviderHisMerchantWechatResult" type="HisWechatProvider" extends="HisWechatProviderResult">
        <collection property="hisMerchantWechatList" notNullColumn="id" javaType="java.util.List" resultMap="HisMerchantWechatResult" />
    </resultMap>

    <resultMap type="HisMerchantWechat" id="HisMerchantWechatResult">
        <result property="id"    column="id"    />
        <result property="providerId"    column="provider_id"    />
        <result property="subAppId"    column="sub_app_id"    />
        <result property="orgCode"    column="org_code"    />
        <result property="orgName"    column="org_name"    />
        <result property="createTime"    column="create_time"    />
        <result property="deleted"    column="deleted"    />
    </resultMap>

    <sql id="selectHisWechatProviderVo">
        select id, client_id, client_secret, app_id, app_secret, mch_app_id, mch_id, mch_key, key_path, front_url, open_api, create_time, deleted from his_wechat_provider
    </sql>

    <select id="selectHisWechatProviderList" parameterType="HisWechatProvider" resultMap="HisWechatProviderResult">
        <include refid="selectHisWechatProviderVo"/>
        <where>  
            <if test="clientId != null  and clientId != ''"> and client_id = #{clientId}</if>
            <if test="mchId != null  and mchId != ''"> and mch_id = #{mchId}</if>
        </where>
    </select>
    
    <select id="selectHisWechatProviderById" parameterType="Long" resultMap="HisWechatProviderHisMerchantWechatResult">
        select a.id, a.client_id, a.client_secret, a.app_id, a.app_secret, a.mch_app_id, a.mch_id, a.mch_key, a.key_path, a.front_url, a.open_api, a.create_time, a.deleted,
            b.id, b.provider_id, b.sub_app_id, b.org_code, b.org_name, b.create_time, b.deleted
        from his_wechat_provider a
        left join his_merchant_wechat b on b.provider_id = a.id
        where a.id = #{id}
    </select>
    
    <delete id="deleteHisMerchantWechatByProviderIds" parameterType="String">
        delete from his_merchant_wechat where provider_id in 
        <foreach item="providerId" collection="array" open="(" separator="," close=")">
            #{providerId}
        </foreach>
    </delete>

    <delete id="deleteHisMerchantWechatByProviderId" parameterType="Long">
        delete from his_merchant_wechat where provider_id = #{providerId}
    </delete>

    <insert id="batchHisMerchantWechat">
        insert into his_merchant_wechat( id, provider_id, sub_app_id, org_code, org_name, create_time, deleted) values
		<foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.providerId}, #{item.subAppId}, #{item.orgCode}, #{item.orgName}, #{item.createTime}, #{item.deleted})
        </foreach>
    </insert>

</mapper>