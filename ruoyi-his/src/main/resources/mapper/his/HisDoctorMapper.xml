    <delete id="deleteHisDoctorById" parameterType="Long">
        delete from his_doctor where id = #{id}
    </delete>

    <delete id="deleteHisDoctorByIds" parameterType="String">
        delete from his_doctor where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

