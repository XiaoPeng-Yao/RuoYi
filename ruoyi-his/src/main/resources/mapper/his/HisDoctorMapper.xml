<mapper namespace="com.ruoyi.his.mapper.HisDoctorMapper">
    
    <resultMap type="HisDoctor" id="HisDoctorResult">
        <result property="id"    column="id"    />
        <result property="memberId"    column="member_id"    />
        <result property="doctorId"    column="doctor_id"    />
        <result property="doctorName"    column="doctor_name"    />
        <result property="orgCode"    column="org_code"    />
        <result property="orgName"    column="org_name"    />
        <result property="deptId"    column="dept_id"    />
        <result property="deptName"    column="dept_name"    />
        <result property="mobilePhone"    column="mobile_phone"    />
        <result property="avatar"    column="avatar"    />
        <result property="jobTitle"    column="job_title"    />
        <result property="workingYears"    column="working_years"    />
        <result property="expertiseAreas"    column="expertise_areas"    />
        <result property="doctorProfile"    column="doctor_profile"    />
        <result property="fans"    column="fans"    />
        <result property="starRating"    column="star_rating"    />
        <result property="isShow"    column="is_show"    />
        <result property="isVirtualAccount"    column="is_virtual_account"    />
        <result property="templateId"    column="template_id"    />
        <result property="templateName"    column="template_name"    />
        <result property="dailyRegisteredNum"    column="daily_registered_num"    />
