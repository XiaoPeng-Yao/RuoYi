<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PaymentAccountMapper">
    
    <resultMap type="PaymentAccount" id="PaymentAccountResult">
        <result property="id"    column="id"    />
        <result property="parentId"    column="parent_id"    />
        <result property="payee"    column="payee"    />
        <result property="bankName"    column="bank_name"    />
        <result property="accountNumber"    column="account_number"    />
        <result property="address"    column="address"    />
        <result property="swiftCode"    column="swift_code"    />
        <result property="bankAddress"    column="bank_address"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectPaymentAccountVo">
        select id, parent_id, payee, bank_name, account_number, address, swift_code, bank_address, create_by, create_time, update_time, update_by, del_flag from sys_payment_account
    </sql>

    <select id="selectPaymentAccountList" parameterType="PaymentAccount" resultMap="PaymentAccountResult">
        <include refid="selectPaymentAccountVo"/>
        <where>  
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="payee != null  and payee != ''"> and payee like concat('%', #{payee}, '%')</if>
            <if test="bankName != null  and bankName != ''"> and bank_name like concat('%', #{bankName}, '%')</if>
            <if test="accountNumber != null  and accountNumber != ''"> and account_number = #{accountNumber}</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
            <if test="swiftCode != null  and swiftCode != ''"> and swift_code = #{swiftCode}</if>
            <if test="bankAddress != null  and bankAddress != ''"> and bank_address = #{bankAddress}</if>
        </where>
    </select>
    
    <select id="selectPaymentAccountById" parameterType="Long" resultMap="PaymentAccountResult">
        <include refid="selectPaymentAccountVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertPaymentAccount" parameterType="PaymentAccount" useGeneratedKeys="true" keyProperty="id">
        insert into sys_payment_account
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="parentId != null">parent_id,</if>
            <if test="payee != null">payee,</if>
            <if test="bankName != null">bank_name,</if>
            <if test="accountNumber != null">account_number,</if>
            <if test="address != null">address,</if>
            <if test="swiftCode != null">swift_code,</if>
            <if test="bankAddress != null">bank_address,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="parentId != null">#{parentId},</if>
            <if test="payee != null">#{payee},</if>
            <if test="bankName != null">#{bankName},</if>
            <if test="accountNumber != null">#{accountNumber},</if>
            <if test="address != null">#{address},</if>
            <if test="swiftCode != null">#{swiftCode},</if>
            <if test="bankAddress != null">#{bankAddress},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updatePaymentAccount" parameterType="PaymentAccount">
        update sys_payment_account
        <trim prefix="SET" suffixOverrides=",">
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="payee != null">payee = #{payee},</if>
            <if test="bankName != null">bank_name = #{bankName},</if>
            <if test="accountNumber != null">account_number = #{accountNumber},</if>
            <if test="address != null">address = #{address},</if>
            <if test="swiftCode != null">swift_code = #{swiftCode},</if>
            <if test="bankAddress != null">bank_address = #{bankAddress},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePaymentAccountById" parameterType="Long">
        delete from sys_payment_account where id = #{id}
    </delete>

    <delete id="deletePaymentAccountByIds" parameterType="String">
        delete from sys_payment_account where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectCurrency" parameterType="String" resultType="String">
        select rate from zt_ortt where currency = #{currencyStr} and dbname = 2 order by ratedate desc limit 0,1;
    </select>

</mapper>