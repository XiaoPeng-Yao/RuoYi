<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BusUserCollectMapper">
    
    <resultMap type="BusUserCollect" id="BusUserCollectResult">
        <result property="collectId"    column="collect_id"    />
        <result property="collectType"    column="collect_type"    />
        <result property="collectUserId"    column="collect_user_id"    />
        <result property="collectUserName"    column="collect_user_name"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>
	
	<sql id="selectBusUserCollectVo">
        select collect_id, collect_type, collect_user_id, collect_user_name, create_time from bus_user_collect
    </sql>
	
    <select id="selectBusUserCollectList" parameterType="BusUserCollect" resultMap="BusUserCollectResult">
        <include refid="selectBusUserCollectVo"/>
        <where>  
            <if test="collectId != null "> and collect_id = #{collectId}</if>
             <if test="collectType != null  and collectType != '' "> and collect_type = #{collectType}</if>
             <if test="collectUserId != null "> and collect_user_id = #{collectUserId}</if>
             <if test="collectUserName != null  and collectUserName != '' "> and collect_user_name = #{collectUserName}</if>
             <if test="createTime != null "> and create_time = #{createTime}</if>
         </where>
    </select>
    
    <select id="selectBusUserCollectById" parameterType="Long" resultMap="BusUserCollectResult">
        <include refid="selectBusUserCollectVo"/>
        where collect_id = #{collectId}
    </select>
        
    <insert id="insertBusUserCollect" parameterType="BusUserCollect">
        insert into bus_user_collect
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="collectId != null  ">collect_id,</if>
			<if test="collectType != null  and collectType != ''  ">collect_type,</if>
			<if test="collectUserId != null  ">collect_user_id,</if>
			<if test="collectUserName != null  and collectUserName != ''  ">collect_user_name,</if>
			<if test="createTime != null  ">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="collectId != null  ">#{collectId},</if>
			<if test="collectType != null  and collectType != ''  ">#{collectType},</if>
			<if test="collectUserId != null  ">#{collectUserId},</if>
			<if test="collectUserName != null  and collectUserName != ''  ">#{collectUserName},</if>
			<if test="createTime != null  ">#{createTime},</if>
         </trim>
    </insert>
	 
    <update id="updateBusUserCollect" parameterType="BusUserCollect">
        update bus_user_collect
        <trim prefix="SET" suffixOverrides=",">
            <if test="collectType != null  and collectType != ''  ">collect_type = #{collectType},</if>
            <if test="collectUserId != null  ">collect_user_id = #{collectUserId},</if>
            <if test="collectUserName != null  and collectUserName != ''  ">collect_user_name = #{collectUserName},</if>
            <if test="createTime != null  ">create_time = #{createTime},</if>
        </trim>
        where collect_id = #{collectId}
    </update>

	<delete id="deleteBusUserCollectById" parameterType="Long">
        delete from bus_user_collect where collect_id = #{collectId}
    </delete>
	
    <delete id="deleteBusUserCollectByIds" parameterType="String">
        delete from bus_user_collect where collect_id in 
        <foreach item="collectId" collection="array" open="(" separator="," close=")">
            #{collectId}
        </foreach>
    </delete>
    
</mapper>