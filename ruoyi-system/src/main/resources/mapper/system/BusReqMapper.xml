<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BusReqMapper">
    
    <resultMap type="BusReq" id="BusReqResult">
        <result property="reqId"    column="req_id"    />
        <result property="reqType"    column="req_type"    />
        <result property="reqName"    column="req_name"    />
        <result property="classes"    column="classes"    />
        <result property="label"    column="label"    />
        <result property="content"    column="content"    />
        <result property="status"    column="status"    />
        <result property="publishDeptId"    column="publish_dept_id"    />
        <result property="publishUserId"    column="publish_user_id"    />
        <result property="publishUserName"    column="publish_user_name"    />
        <result property="createTime"    column="create_time"    />
        <result property="receiveDeptId"    column="receive_dept_id"    />
        <result property="receiveUserId"    column="receive_user_id"    />
        <result property="receiveUserName"    column="receive_user_name"    />
        <result property="receiveTime"    column="receive_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>
	
	<sql id="selectBusReqVo">
        select req_id, req_type, req_name, classes, label, content, status, publish_dept_id, publish_user_id, publish_user_name, create_time, receive_dept_id, receive_user_id, receive_user_name, receive_time, update_time from bus_req
    </sql>
	
    <select id="selectBusReqList" parameterType="BusReq" resultMap="BusReqResult">
        <include refid="selectBusReqVo"/>
        <where>  
            <if test="reqId != null "> and req_id = #{reqId}</if>
             <if test="reqType != null "> and req_type = #{reqType}</if>
             <if test="reqName != null  and reqName != '' "> and req_name = #{reqName}</if>
             <if test="classes != null  and classes != '' "> and classes = #{classes}</if>
             <if test="label != null  and label != '' "> and label = #{label}</if>
             <if test="content != null  and content != '' "> and content = #{content}</if>
             <if test="status != null  and status != '' "> and status = #{status}</if>
             <if test="publishDeptId != null "> and publish_dept_id = #{publishDeptId}</if>
             <if test="publishUserId != null "> and publish_user_id = #{publishUserId}</if>
             <if test="publishUserName != null  and publishUserName != '' "> and publish_user_name = #{publishUserName}</if>
             <if test="createTime != null "> and create_time = #{createTime}</if>
             <if test="receiveDeptId != null "> and receive_dept_id = #{receiveDeptId}</if>
             <if test="receiveUserId != null "> and receive_user_id = #{receiveUserId}</if>
             <if test="receiveUserName != null  and receiveUserName != '' "> and receive_user_name = #{receiveUserName}</if>
             <if test="receiveTime != null "> and receive_time = #{receiveTime}</if>
             <if test="updateTime != null "> and update_time = #{updateTime}</if>
         </where>
    </select>
    
    <select id="selectBusReqById" parameterType="Long" resultMap="BusReqResult">
        <include refid="selectBusReqVo"/>
        where req_id = #{reqId}
    </select>
        
    <insert id="insertBusReq" parameterType="BusReq" useGeneratedKeys="true" keyProperty="reqId">
        insert into bus_req
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="reqType != null  ">req_type,</if>
			<if test="reqName != null  and reqName != ''  ">req_name,</if>
			<if test="classes != null  and classes != ''  ">classes,</if>
			<if test="label != null  and label != ''  ">label,</if>
			<if test="content != null  and content != ''  ">content,</if>
			<if test="status != null  and status != ''  ">status,</if>
			<if test="publishDeptId != null  ">publish_dept_id,</if>
			<if test="publishUserId != null  ">publish_user_id,</if>
			<if test="publishUserName != null  and publishUserName != ''  ">publish_user_name,</if>
			<if test="createTime != null  ">create_time,</if>
			<if test="receiveDeptId != null  ">receive_dept_id,</if>
			<if test="receiveUserId != null  ">receive_user_id,</if>
			<if test="receiveUserName != null  and receiveUserName != ''  ">receive_user_name,</if>
			<if test="receiveTime != null  ">receive_time,</if>
			<if test="updateTime != null  ">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="reqType != null  ">#{reqType},</if>
			<if test="reqName != null  and reqName != ''  ">#{reqName},</if>
			<if test="classes != null  and classes != ''  ">#{classes},</if>
			<if test="label != null  and label != ''  ">#{label},</if>
			<if test="content != null  and content != ''  ">#{content},</if>
			<if test="status != null  and status != ''  ">#{status},</if>
			<if test="publishDeptId != null  ">#{publishDeptId},</if>
			<if test="publishUserId != null  ">#{publishUserId},</if>
			<if test="publishUserName != null  and publishUserName != ''  ">#{publishUserName},</if>
			<if test="createTime != null  ">#{createTime},</if>
			<if test="receiveDeptId != null  ">#{receiveDeptId},</if>
			<if test="receiveUserId != null  ">#{receiveUserId},</if>
			<if test="receiveUserName != null  and receiveUserName != ''  ">#{receiveUserName},</if>
			<if test="receiveTime != null  ">#{receiveTime},</if>
			<if test="updateTime != null  ">#{updateTime},</if>
         </trim>
    </insert>
	 
    <update id="updateBusReq" parameterType="BusReq">
        update bus_req
        <trim prefix="SET" suffixOverrides=",">
            <if test="reqType != null  ">req_type = #{reqType},</if>
            <if test="reqName != null  and reqName != ''  ">req_name = #{reqName},</if>
            <if test="classes != null  and classes != ''  ">classes = #{classes},</if>
            <if test="label != null  and label != ''  ">label = #{label},</if>
            <if test="content != null  and content != ''  ">content = #{content},</if>
            <if test="status != null  and status != ''  ">status = #{status},</if>
            <if test="publishDeptId != null  ">publish_dept_id = #{publishDeptId},</if>
            <if test="publishUserId != null  ">publish_user_id = #{publishUserId},</if>
            <if test="publishUserName != null  and publishUserName != ''  ">publish_user_name = #{publishUserName},</if>
            <if test="createTime != null  ">create_time = #{createTime},</if>
            <if test="receiveDeptId != null  ">receive_dept_id = #{receiveDeptId},</if>
            <if test="receiveUserId != null  ">receive_user_id = #{receiveUserId},</if>
            <if test="receiveUserName != null  and receiveUserName != ''  ">receive_user_name = #{receiveUserName},</if>
            <if test="receiveTime != null  ">receive_time = #{receiveTime},</if>
            <if test="updateTime != null  ">update_time = #{updateTime},</if>
        </trim>
        where req_id = #{reqId}
    </update>

	<delete id="deleteBusReqById" parameterType="Long">
        delete from bus_req where req_id = #{reqId}
    </delete>
	
    <delete id="deleteBusReqByIds" parameterType="String">
        delete from bus_req where req_id in 
        <foreach item="reqId" collection="array" open="(" separator="," close=")">
            #{reqId}
        </foreach>
    </delete>
    
</mapper>